<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LearningReportActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageButton
            android:id="@+id/buttonChartsBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back2_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:text="学习报告"/>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--专注时长数字展示-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/textConcentrationTimeToday"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="1.2"
                        android:textSize="35dp"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="今日专注时长(h)"
                        android:textSize="10dp"
                        android:textColor="#AAA9A9"
                        android:gravity="center|top"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/textConcentrationTimeWeekly"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="8.9"
                        android:textSize="35dp"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="本周专注时长(h)"
                        android:textSize="10dp"
                        android:textColor="#AAA9A9"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/textConcentrationTimeTotal"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="23.1"
                        android:textSize="35dp"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="总专注时长(h)"
                        android:textSize="10dp"
                        android:textColor="#AAA9A9"
                        android:gravity="center"/>
                </LinearLayout>

            </LinearLayout>

            <!--学习时长数字展示-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/textLearningTimeToday"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="2.2"
                        android:textSize="35dp"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="今日学习时长(h)"
                        android:textSize="10dp"
                        android:textColor="#AAA9A9"
                        android:gravity="center|top"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/textLearningTimeWeekly"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="20.7"
                        android:textSize="35dp"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="本周学习时长(h)"
                        android:textSize="10dp"
                        android:textColor="#AAA9A9"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/textLearningTimeTotal"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="56.8"
                        android:textSize="35dp"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="总学习时长(h)"
                        android:textSize="10dp"
                        android:textColor="#AAA9A9"
                        android:gravity="center"/>
                </LinearLayout>

            </LinearLayout>

            <!--分割线-->
           <View
               android:layout_margin="20dp"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="#D1CFCF"/>

            <!--专注度对比：饼状图展示-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--标题栏,被选中的按钮变蓝色-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:paddingLeft="15dp"
                        android:layout_width="280dp"
                        android:layout_height="match_parent"
                        android:text="专注度对比图"
                        android:gravity="center|left"/>

                    <Button
                        android:id="@+id/buttonPieChartWeekly"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:text="本周"
                        android:paddingLeft="8dp"
                        android:background="#00000000"
                        android:textColor="#AAA9A9"
                        android:textSize="12sp"/>

                    <Button
                        android:id="@+id/buttonPieChartMonthly"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:paddingRight="8dp"
                        android:background="#00000000"
                        android:textColor="#AAA9A9"
                        android:text="本月"/>
                </LinearLayout>

                <!--饼状图-->
                <lecho.lib.hellocharts.view.PieChartView
                    android:id="@+id/pieChartOfConcentration"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    />

            </LinearLayout>

            <!--分割线-->
            <View
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D1CFCF"/>

            <!--最近专注时长：折线图-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--标题栏,被选中的按钮变蓝色-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:paddingLeft="15dp"
                        android:layout_width="280dp"
                        android:layout_height="match_parent"
                        android:text="最近专注时长"
                        android:gravity="center|left"/>

                    <Button
                        android:id="@+id/buttonLineChartConcentrationTimeWeekly"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:text="本周"
                        android:paddingLeft="8dp"
                        android:background="#00000000"
                        android:textColor="#AAA9A9"
                        android:textSize="12sp"/>

                    <Button
                        android:id="@+id/buttonLineChartConcentrationTimeMonthly"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:paddingRight="8dp"
                        android:background="#00000000"
                        android:textColor="#AAA9A9"
                        android:text="本月"/>
                </LinearLayout>

                <lecho.lib.hellocharts.view.LineChartView
                    android:id="@+id/lineChartOfConcentrationTime"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>

            <!--分割线-->
            <View
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D1CFCF"/>

            <!--最近学习时长：折线图-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--标题栏,被选中的按钮变蓝色-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:paddingLeft="15dp"
                        android:layout_width="280dp"
                        android:layout_height="match_parent"
                        android:text="最近学习时长"
                        android:gravity="center|left"/>

                    <Button
                        android:id="@+id/buttonLineChartLearningTimeWeekly"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:text="本周"
                        android:paddingLeft="8dp"
                        android:background="#00000000"
                        android:textColor="#AAA9A9"
                        android:textSize="12sp"/>

                    <Button
                        android:id="@+id/buttonLineChartLearningTimeMonthly"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:paddingRight="8dp"
                        android:background="#00000000"
                        android:textColor="#AAA9A9"
                        android:text="本月"/>
                </LinearLayout>

                <lecho.lib.hellocharts.view.LineChartView
                    android:id="@+id/lineChartOfLearningTime"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>